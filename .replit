modules = ["nodejs-20"]
[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Expo Native Dev Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Expo Web Dev Server"

[[workflows.workflow]]
name = "Expo Native Dev Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd alarm-app && EXPO_NO_INTERACTIVE=1 npx expo start --tunnel"

[[workflows.workflow]]
name = "Expo Web Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd alarm-app && npm run web"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8081
externalPort = 8081

[nix]
channel = "stable-25_05"

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd alarm-app && npx serve -s dist -p 5000"]
build = ["bash", "-c", "cd alarm-app && npm run build"]
